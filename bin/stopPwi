#!/bin/bash

if [ "${MGICONFIG}" = "" ]
then
    MGICONFIG=/usr/local/mgi/live/mgiconfig
    export MGICONFIG
fi

source ${MGICONFIG}/master.config.sh

PWI_HOME=${MGI_LIVE}/pwi
PWI_ADMIN=${PWI_HOME}/admin

source ${PWI_HOME}/Configuration

cd ${PWI_ADMIN}

echo "Stopping pwi server"
./stopserver.sh
