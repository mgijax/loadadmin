#!/bin/bash

if [ "${MGICONFIG}" = "" ]
then
    MGICONFIG=/usr/local/mgi/live/mgiconfig
    export MGICONFIG
fi

source ${MGICONFIG}/master.config.sh

API_HOME=${MGI_LIVE}/mgd_java_api

cd ${API_HOME}

. ./Configuration

echo "Stopping Java API"
./stopApi.sh

echo "Save log file: ${LOG_FILE}.old"
cp ${LOG_FILE} ${LOG_FILE}.old
